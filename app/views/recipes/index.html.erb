<h1>Recipes</h1>

<div class='flex flex-row'>
  <div class='flex flex-column my-products'>
    <h2>My products</h2>
    <%= form_tag recipes_path do  %>
      <%= text_area_tag :products, @products, { rows: 8, placeholder: "New line separated list of products" } %>
      <button id="search-recipes" type="submit">Search for recipes</button>
    <% end %>
  </div>

  <div class='flex flex-column'>
    <h2>Recipes I can cook</h2>
    <%= render @recipes %>
  </div>
</div>
